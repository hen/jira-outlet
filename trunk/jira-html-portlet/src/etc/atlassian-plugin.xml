<atlassian-plugin key="com.sourcelabs.jira.plugin.portlet.html" name="Improved HTML Plugin">
    <plugin-info>
        <description>Improved HTML Plugin</description>
        <version>1.1</version>
        <application-version min="4.0" max="4.0"/>
        <vendor name="Henri Yandell" url="http://www.buildguy.com"/>
    </plugin-info>

    <portlet key="html" name="Improved HTML" class="com.sourcelabs.jira.plugin.portlet.html.HtmlPortlet">
        <description key="portlet.html.description">i18n description</description>
        <resource type="velocity" name="view" location="templates/html.vm" />
        <resource type="i18n" name="i18n" location="com.sourcelabs.jira.plugin.portlets.html" />
        <label key="portlet.html.name" />
        <objectdescriptor key="portlet.html.display.name" />
        <properties>
            <property>
                <key>anonymousTitleType</key>
                <name>portlet.html.field.anonymoustitletype.display.name</name>
                <description>portlet.html.field.anonymoustitletype.display.description</description>
                <type>select</type>
                <default>none</default>
                <values>
                    <value>
                        <key>title</key>
                        <value>portlet.html.field.type.display.title</value>
                    </value>
                    <value>
                        <key>none</key>
                        <value>portlet.html.field.type.display.none</value>
                    </value>
                    <value>
                        <key>specified</key>
                        <value>portlet.html.field.type.display.specified</value>
                    </value>
                </values>
            </property>
            <property>
                <key>anonymousTitleText</key>
                <name>portlet.html.field.anonymoustitletext.title.name</name>
                <description>portlet.html.field.anonymoustitletext.title.description</description>
                <type>string</type>
            </property>
            <property>
                <key>anonymousType</key>
                <name>portlet.html.field.anonymoustype.display.name</name>
                <description>portlet.html.field.anonymoustype.display.description</description>
                <type>select</type>
                <default>introduction</default>
                <values>
                    <value>
                        <key>introduction</key>
                        <value>portlet.html.field.type.display.introduction</value>
                    </value>
                    <value>
                        <key>none</key>
                        <value>portlet.html.field.type.display.none</value>
                    </value>
                    <value>
                        <key>specified</key>
                        <value>portlet.html.field.type.display.specified</value>
                    </value>
                </values>
            </property>
            <property>
                <key>anonymousText</key>
                <name>portlet.html.field.anonymoustext.title.name</name>
                <description>portlet.html.field.anonymoustext.title.description</description>
                <type>text</type>
            </property>
            <property>
                <key>userTitleType</key>
                <name>portlet.html.field.usertitletype.display.name</name>
                <description>portlet.html.field.usertitletype.display.description</description>
                <type>select</type>
                <default>none</default>
                <values>
                    <value>
                        <key>title</key>
                        <value>portlet.html.field.type.display.title</value>
                    </value>
                    <value>
                        <key>none</key>
                        <value>portlet.html.field.type.display.none</value>
                    </value>
                    <value>
                        <key>specified</key>
                        <value>portlet.html.field.type.display.specified</value>
                    </value>
                </values>
            </property>
            <property>
                <key>userTitleText</key>
                <name>portlet.html.field.usertitletext.title.name</name>
                <description>portlet.html.field.usertitletext.title.description</description>
                <type>string</type>
            </property>
            <property>
                <key>userType</key>
                <name>portlet.html.field.usertype.display.name</name>
                <description>portlet.html.field.usertype.display.description</description>
                <type>select</type>
                <default>introduction</default>
                <values>
                    <value>
                        <key>introduction</key>
                        <value>portlet.html.field.type.display.introduction</value>
                    </value>
                    <value>
                        <key>none</key>
                        <value>portlet.html.field.type.display.none</value>
                    </value>
                    <value>
                        <key>specified</key>
                        <value>portlet.html.field.type.display.specified</value>
                    </value>
                </values>
            </property>
            <property>
                <key>userText</key>
                <name>portlet.html.field.usertext.title.name</name>
                <description>portlet.html.field.usertext.title.description</description>
                <type>text</type>
            </property>
        </properties>
    </portlet>

</atlassian-plugin>
